/*post*/
.post-container{
	display: flex;
	flex-direction: column;
	margin: 20rpx auto 40rpx;
	background-color: #fff;
	border-bottom: 1px solid #ededed;
	border-top: 1px solid #ededed;
	padding-bottom: 5px;
}

.post-info{
	margin: 10rpx 0 20rpx 10rpx;
}
.avatar{
	width: 60rpx;
	height: 60rpx;
	vertical-align: middle;

}
.date{
	margin-left: 20rpx;
	vertical-align: middle;
	margin-bottom: 5px;
	font-size: 26rpx;
}

/*水平间距用rpx 垂直方向上使用px*/
.title{
	font-size: 34rpx;
	font-weight: 600;
	color: #333;
	margin-bottom: 10px;
	/*控制的是一个标题*/
	margin-left: 10px;
}

/*post封面*/
.post-img{
	width: 100%;
	height: 340rpx;
	margin-bottom: 15px;
}

.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like{
	font-size: 13px;
	flex-direction: row;
	line-height: 16px;
	margin-left: 10px;
}
.post-icon{
	height: 16px;
	width: 16px;
	margin-right: 8px;
	vertical-align: middle;
}
.post-num{
	vertical-align: middle;
	margin-right: 20px;
}